<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Калькуляторы</title>
    <style>
      :root {
        --bg1: radial-gradient(1200px 600px at 20% -10%, #dbeafe 0%, rgba(219,234,254,0) 55%),
          radial-gradient(900px 520px at 90% 0%, #fce7f3 0%, rgba(252,231,243,0) 55%),
          #ffffff;
        --ink: #111827;
        --muted: #4b5563;
        --stroke: rgba(229,231,235,.9);
        --surface: rgba(255,255,255,.8);
        --surface-strong: rgba(255,255,255,.85);
        --shadow: 0 10px 30px rgba(15,23,42,.08);
        --shadow-soft: 0 10px 30px rgba(15,23,42,.06);
      }

      html,
      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      body {
        color: var(--ink);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      }

      .page {
        min-height: 100vh;
        background: var(--bg1);
      }

      .container {
        max-width: 980px;
        margin: 0 auto;
        padding: 28px 20px 36px;
      }

      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 18px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .brand-logo {
        display: block;
        width: 34px;
        height: 34px;
        border-radius: 10px;
        object-fit: cover;
      }

      .brand-name {
        font-weight: 700;
        letter-spacing: -0.01em;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .menu-btn {
        display: none;
        width: 42px;
        height: 42px;
        border-radius: 12px;
        border: 1px solid var(--stroke);
        background: rgba(255,255,255,.8);
        backdrop-filter: blur(10px);
        cursor: pointer;
        font: inherit;
      }

      .mobile-menu {
        display: none;
        margin-top: 10px;
        border: 1px solid var(--stroke);
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: var(--shadow-soft);
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transform: translateY(-6px);
        transition: max-height 240ms ease, opacity 200ms ease, transform 240ms ease;
      }

      .mobile-menu.is-open {
        max-height: 260px;
        opacity: 1;
        transform: translateY(0);
      }

      .mobile-menu a {
        display: block;
        padding: 12px 14px;
        text-decoration: none;
        color: var(--ink);
        border-top: 1px solid rgba(229,231,235,.8);
      }

      .mobile-menu a:first-child {
        border-top: 0;
      }

      .nav-link {
        text-decoration: none;
        color: var(--ink);
        padding: 8px 10px;
        border-radius: 10px;
      }

      @media (max-width: 640px) {
        .nav {
          display: none;
        }

        .menu-btn {
          display: inline-flex;
          align-items: center;
          justify-content: center;
        }

        .mobile-menu {
          display: block;
        }
      }

      .card {
        border: 1px solid var(--stroke);
        background: var(--surface);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        box-shadow: var(--shadow-soft);
        padding: 16px;
      }

      .card--hero {
        padding: 22px;
        box-shadow: var(--shadow);
      }

      .hero-title {
        margin: 0 0 10px;
        font-size: 28px;
        line-height: 1.15;
        letter-spacing: -0.03em;
      }

      .hero-subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 16px;
        line-height: 1.55;
        max-width: 64ch;
      }

      .tabs {
        margin-top: 12px;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .tab {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 10px 14px;
        border-radius: 12px;
        text-decoration: none;
        background: #ffffff;
        color: var(--ink);
        border: 1px solid #e5e7eb;
        font-weight: 600;
      }

      .tab.is-active {
        background: var(--ink);
        color: #ffffff;
        border-color: var(--ink);
      }

      .panel {
        margin-top: 12px;
      }

      .panel.panel--first {
        margin-top: 16px;
      }

      .panel-title {
        margin: 0 0 12px;
        font-size: 18px;
      }

      .panel-hint {
        color: var(--muted);
        line-height: 1.5;
      }

      .form {
        display: grid;
        gap: 8px;
      }

      .form--420 {
        max-width: 420px;
      }

      .form--520 {
        max-width: 520px;
      }

      .form--560 {
        max-width: 560px;
      }

      .form--720 {
        max-width: 720px;
      }

      .grid {
        display: grid;
        gap: 8px;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      }

      .input {
        width: 100%;
        padding: 10px;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        font: inherit;
      }

      .btn {
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid var(--ink);
        background: var(--ink);
        color: #ffffff;
        font-weight: 600;
        cursor: pointer;
      }

      .btn.btn--narrow {
        max-width: 220px;
      }

      .output {
        color: var(--ink);
      }

      .output-stack {
        margin-top: 6px;
        display: grid;
        gap: 8px;
      }

      .output-list {
        display: grid;
        gap: 6px;
      }

      .card-grid {
        margin-top: 16px;
        display: grid;
        gap: 12px;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      }

      .calc-card {
        text-align: left;
        width: 100%;
        cursor: pointer;
      }

      .calc-card:hover {
        transform: translateY(-1px);
        transition: transform 160ms ease;
      }

      .calc-card-title {
        font-weight: 800;
        letter-spacing: -0.01em;
      }

      .calc-card-text {
        margin-top: 6px;
        color: var(--muted);
        line-height: 1.5;
      }

      .panel-top {
        display: flex;
        justify-content: flex-start;
        margin-bottom: 10px;
      }

      .is-hidden {
        display: none;
      }
    </style>
  </head>
  <body>
    <main class="page">
      <div class="container">
        <header class="header">
          <div class="brand">
            <img src="/logo.png" alt="Dr.Welnes" width="34" height="34" class="brand-logo" />
            <div class="brand-name">Dr.Welnes</div>
          </div>
          <nav class="nav">
            <a href="/" class="nav-link">Главная</a>
            <a href="/recipes" class="nav-link">Рецепты</a>
            <a href="/exercises" class="nav-link">Упражнения</a>
            <a href="/theory" class="nav-link">Теория</a>
            <a href="/calculators" class="nav-link">Калькуляторы</a>
          </nav>
          <button id="menu_btn" type="button" class="menu-btn" aria-label="Меню" aria-expanded="false">☰</button>
        </header>

        <div id="mobile_menu" class="mobile-menu" aria-label="Меню">
          <a href="/">Главная</a>
          <a href="/recipes">Рецепты</a>
          <a href="/exercises">Упражнения</a>
          <a href="/theory">Теория</a>
          <a href="/calculators">Калькуляторы</a>
        </div>

        <section class="card card--hero">
          <h1 class="hero-title">Калькуляторы</h1>
          <p class="hero-subtitle">ИМТ, TDEE и оценка 1RM — быстро и без регистрации.</p>
        </section>

        <section class="card-grid" aria-label="Калькуляторы">
          <button type="button" data-calc="bmi" class="card calc-card">
            <div class="calc-card-title">ИМТ</div>
            <div class="calc-card-text">Узнайте за 30 секунд вашу идеальную зону веса и риски для здоровья!</div>
          </button>
          <button type="button" data-calc="tdee" class="card calc-card">
            <div class="calc-card-title">TDEE</div>
            <div class="calc-card-text">Рассчитайте свой точный калораж за минуту — перестаньте гадать с едой!</div>
          </button>
          <button type="button" data-calc="1rm" class="card calc-card">
            <div class="calc-card-title">1RM</div>
            <div class="calc-card-text">Раскройте свой силовой потолок мгновенно — какой вес Вам покорится?</div>
          </button>
          <button type="button" data-calc="hr" class="card calc-card">
            <div class="calc-card-title">Пульсовые зоны</div>
            <div class="calc-card-text">Найдите свои идеальные пульсовые зоны — тренируйтесь умнее, безопаснее и результативнее!</div>
          </button>
        </section>

      <section id="bmi" data-calc-panel class="card panel panel--first is-hidden">
        <div class="panel-top">
          <button type="button" data-back-to-cards class="btn btn--narrow">Назад к карточкам</button>
        </div>
        <h2 class="panel-title">ИМТ (BMI)</h2>
        <div class="form form--420">
          <label>Рост (см)<br /><input id="bmi_h" type="number" inputmode="decimal" class="input" /></label>
          <label>Вес (кг)<br /><input id="bmi_w" type="number" inputmode="decimal" class="input" /></label>
          <button id="bmi_btn" type="button" class="btn btn--narrow">Посчитать</button>
          <div id="bmi_out" class="output"></div>
        </div>
      </section>

      <section id="tdee" data-calc-panel class="card panel is-hidden">
        <div class="panel-top">
          <button type="button" data-back-to-cards class="btn btn--narrow">Назад к карточкам</button>
        </div>
        <h2 class="panel-title">TDEE (поддержание калорий)</h2>
        <div class="form form--520">
          <label>Пол<br />
            <select id="tdee_sex" class="input">
              <option value="male">Муж</option>
              <option value="female">Жен</option>
            </select>
          </label>
          <label>Возраст (лет)<br /><input id="tdee_age" type="number" class="input" /></label>
          <label>Рост (см)<br /><input id="tdee_h" type="number" class="input" /></label>
          <label>Вес (кг)<br /><input id="tdee_w" type="number" class="input" /></label>
          <label>Активность<br />
            <select id="tdee_act" class="input">
              <option value="1.2">Минимальная — сидячая работа, почти нет тренировок</option>
              <option value="1.375">Лёгкая — 1-3 тренировки/нед, много ходьбы</option>
              <option value="1.55">Средняя — 3-5 тренировок/нед, регулярная активность</option>
              <option value="1.725">Высокая — 6-7 тренировок/нед, спорт почти каждый день</option>
              <option value="1.9">Очень высокая — тяжёлая физическая работа + тренировки</option>
            </select>
          </label>
          <button id="tdee_btn" type="button" class="btn btn--narrow">Посчитать</button>
          <div id="tdee_out" class="output"></div>
        </div>
      </section>

      <section id="1rm" data-calc-panel class="card panel is-hidden">
        <div class="panel-top">
          <button type="button" data-back-to-cards class="btn btn--narrow">Назад к карточкам</button>
        </div>
        <h2 class="panel-title">1RM (оценка максимума на 1 повтор)</h2>
        <div class="form form--420">
          <label>Масса тела (кг)<br /><input id="rm_bw" type="number" inputmode="decimal" class="input" /></label>
          <label>Вес снаряда (кг)<br /><input id="rm_w" type="number" inputmode="decimal" class="input" /></label>
          <label>Повторы (1-12)<br /><input id="rm_r" type="number" class="input" /></label>
          <button id="rm_btn" type="button" class="btn btn--narrow">Посчитать</button>
          <div id="rm_out" class="output"></div>
        </div>
      </section>

      <section id="hr" data-calc-panel class="card panel is-hidden">
        <div class="panel-top">
          <button type="button" data-back-to-cards class="btn btn--narrow">Назад к карточкам</button>
        </div>
        <h2 class="panel-title">Пульсовые зоны</h2>
        <div class="form form--560">
          <label>Возраст (лет)<br /><input id="hr_age" type="number" class="input" /></label>
          <button id="hr_btn" type="button" class="btn btn--narrow">Посчитать зоны</button>
          <div id="hr_out" class="output"></div>
        </div>
      </section>

      <script>
        (function () {
          try {
            var btn = document.getElementById('menu_btn');
            var menu = document.getElementById('mobile_menu');

            function closeMenu() {
              if (!btn || !menu) return;
              menu.classList.remove('is-open');
              btn.setAttribute('aria-expanded', 'false');
            }

            function toggleMenu() {
              if (!btn || !menu) return;
              var next = !menu.classList.contains('is-open');
              if (next) {
                menu.classList.add('is-open');
                btn.setAttribute('aria-expanded', 'true');
              } else {
                closeMenu();
              }
            }

            btn && btn.addEventListener('click', function (e) {
              try { e && e.stopPropagation && e.stopPropagation(); } catch (e) {}
              toggleMenu();
            });

            document.addEventListener('click', function (e) {
              try {
                if (!menu || !btn) return;
                var t = e && e.target;
                if (t === btn || (btn.contains && btn.contains(t))) return;
                if (t === menu || (menu.contains && menu.contains(t))) return;
                closeMenu();
              } catch (e) {}
            });

            window.addEventListener('hashchange', function () {
              closeMenu();
            });
          } catch (e) {}

          function setActive(id) {
            try {
              var panels = document.querySelectorAll('[data-calc-panel]');
              for (var i = 0; i < panels.length; i++) {
                var p = panels[i];
                if (p.id === id) {
                  p.classList.remove('is-hidden');
                } else {
                  p.classList.add('is-hidden');
                }
              }

              var links = document.querySelectorAll('[data-calc]');
              for (var j = 0; j < links.length; j++) {
                var a = links[j];
                var isActive = a.getAttribute('data-calc') === id;
                if (isActive) {
                  a.classList.add('is-active');
                } else {
                  a.classList.remove('is-active');
                }
              }

              var activePanel = document.getElementById(id);
              if (activePanel && activePanel.scrollIntoView) {
                activePanel.scrollIntoView({ behavior: 'smooth', block: 'start' });
              }
            } catch (e) {}
          }

          function readHash() {
            var h = (window.location.hash || '').replace('#', '').trim();
            if (h === 'bmi' || h === 'tdee' || h === '1rm' || h === 'hr') return h;
            return '';
          }

          function n(v) {
            var x = Number(v);
            return Number.isFinite(x) ? x : NaN;
          }

          try {
            var initial = readHash();
            if (initial) setActive(initial);
            window.addEventListener('hashchange', function () {
              var next = readHash();
              if (next) setActive(next);
            });
          } catch (e) {}

          try {
            var cards = document.querySelectorAll('[data-calc]');
            for (var ci = 0; ci < cards.length; ci++) {
              cards[ci].addEventListener('click', function (ev) {
                var id = ev && ev.currentTarget && ev.currentTarget.getAttribute('data-calc');
                if (!id) return;
                try {
                  window.location.hash = '#' + id;
                } catch (e) {
                  setActive(id);
                }
              });
            }
          } catch (e) {}

          try {
            var backBtns = document.querySelectorAll('[data-back-to-cards]');
            for (var bi = 0; bi < backBtns.length; bi++) {
              backBtns[bi].addEventListener('click', function () {
                try {
                  window.location.hash = '';
                } catch (e) {}

                try {
                  var panels = document.querySelectorAll('[data-calc-panel]');
                  for (var i = 0; i < panels.length; i++) {
                    panels[i].classList.add('is-hidden');
                  }
                  var grid = document.querySelector('.card-grid');
                  if (grid && grid.scrollIntoView) {
                    grid.scrollIntoView({ behavior: 'smooth', block: 'start' });
                  }
                } catch (e) {}
              });
            }
          } catch (e) {}

          var bmiBtn = document.getElementById('bmi_btn');
          bmiBtn && bmiBtn.addEventListener('click', function () {
            var h = n(document.getElementById('bmi_h').value) / 100;
            var w = n(document.getElementById('bmi_w').value);
            var out = document.getElementById('bmi_out');
            if (!out) return;
            if (!h || !w) { out.textContent = 'Заполни рост и вес.'; return; }
            var bmi = w / (h * h);
            var msg = '';
            if (bmi < 18.5) msg = 'Слишком легко! Добавьте энергии для сил и защиты организма';
            else if (bmi < 25) msg = 'Зеленая зона! Ваш вес в гармонии с ростом — риски минимальны';
            else if (bmi < 30) msg = 'Желтая зона. Вес выше нормы — пора корректировать привычки';
            else msg = 'Красная зона. Высокие риски для здоровья — нужен план действий';
            out.textContent = 'ИМТ: ' + bmi.toFixed(1) + '. ' + msg;
          });

          var tdeeBtn = document.getElementById('tdee_btn');
          tdeeBtn && tdeeBtn.addEventListener('click', function () {
            var sex = document.getElementById('tdee_sex').value;
            var age = n(document.getElementById('tdee_age').value);
            var h = n(document.getElementById('tdee_h').value);
            var w = n(document.getElementById('tdee_w').value);
            var act = n(document.getElementById('tdee_act').value);
            var out = document.getElementById('tdee_out');
            if (!out) return;
            if (!age || !h || !w || !act) { out.textContent = 'Заполни все поля.'; return; }
            // Mifflin-St Jeor
            var bmr = (sex === 'male')
              ? (10 * w + 6.25 * h - 5 * age + 5)
              : (10 * w + 6.25 * h - 5 * age - 161);
            var tdee = bmr * act;

            var label = '';
            if (act <= 1.2) label = 'Эконом-режим — 2000 ккал. Активность раскроет потенциал!';
            else if (act <= 1.375) label = 'Баланс — 2400 ккал. Ваш комфортный уровень расхода';
            else if (act <= 1.55) label = 'Активный ритм — 2800 ккал. Тело работает как часы!';
            else label = 'Спортсмен — 3200+ ккал. Машина в полной мощности!';

            out.textContent = 'Поддержание: ' + Math.round(tdee) + ' ккал/день. ' + label;
          });

          var rmBtn = document.getElementById('rm_btn');
          rmBtn && rmBtn.addEventListener('click', function () {
            var bw = n(document.getElementById('rm_bw').value);
            var w = n(document.getElementById('rm_w').value);
            var r = n(document.getElementById('rm_r').value);
            var out = document.getElementById('rm_out');
            if (!out) return;
            if (!bw || !w || !r) { out.textContent = 'Заполни вес тела, вес и повторы.'; return; }
            if (r < 1 || r > 12) { out.textContent = 'Повторы должны быть 1-12.'; return; }
            // Epley
            var oneRm = w * (1 + r / 30);
            var ratio = oneRm / bw;
            var msg = '';
            if (ratio < 0.8) msg = 'Стартовая сила. База заложена — впереди прорыв!';
            else if (ratio < 1.2) msg = 'Хорошая мощь. Вы на правильном пути к результату';
            else if (ratio < 1.6) msg = 'Элитный уровень! Гордитесь — элита ждет';
            else msg = 'Легенда силы. Ваш максимум — эталон для других';

            out.textContent = '1RM (оценка): ' + oneRm.toFixed(1) + ' кг (' + ratio.toFixed(2) + '×вес тела). ' + msg;
          });

          var hrBtn = document.getElementById('hr_btn');
          hrBtn && hrBtn.addEventListener('click', function () {
            var age = n(document.getElementById('hr_age').value);
            var out = document.getElementById('hr_out');
            if (!out) return;

            if (!age) { out.textContent = 'Введи возраст.'; return; }
            var hrMax = 220 - age;

            if (hrMax < 100 || hrMax > 240) { out.textContent = 'Проверь ЧССмакс: значение выглядит необычно.'; return; }

            function zone(p1, p2) {
              var a = Math.round(hrMax * p1);
              var b = Math.round(hrMax * p2);
              return a + '–' + b;
            }

            out.innerHTML =
              '<div class="output-stack">' +
              '<div><b>ЧССмакс</b>: ' + Math.round(hrMax) + ' уд/мин</div>' +
              '<div class="output-list">' +
              '<div><b>Зона 1</b> (50–60%): ' + zone(0.5, 0.6) + ' — Зеленая — сжигай жир легко и комфортно</div>' +
              '<div><b>Зона 2</b> (60–70%): ' + zone(0.6, 0.7) + ' — Синяя — выносливость растет, сердце укрепляется</div>' +
              '<div><b>Зона 3</b> (70–80%): ' + zone(0.7, 0.8) + ' — Желтая — порог мощности, прогресс ускоряется</div>' +
              '<div><b>Зона 4</b> (80–90%): ' + zone(0.8, 0.9) + ' — Красная — пик силы, прорывы и рекорды!</div>' +
              '<div><b>Зона 5</b> (90–100%): ' + zone(0.9, 1.0) + ' — Красная — пик силы, прорывы и рекорды!</div>' +
              '</div>' +
              '</div>';
          });
        })();
      </script>
      </div>
    </main>
  </body>
</html>
