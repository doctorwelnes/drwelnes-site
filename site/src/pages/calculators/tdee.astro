<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/global.css" />
    <title>Основной обмен энергии</title>
    <style>
      :root {
        --bg1: radial-gradient(1200px 600px at 20% -10%, #dbeafe 0%, rgba(219,234,254,0) 55%),
          radial-gradient(900px 520px at 90% 0%, #fce7f3 0%, rgba(252,231,243,0) 55%),
          #ffffff;
        --ink: #111827;
        --muted: #4b5563;
        --stroke: rgba(229,231,235,.9);
        --surface: rgba(255,255,255,.8);
        --surface-strong: rgba(255,255,255,.85);
        --shadow: 0 10px 30px rgba(15,23,42,.08);
        --shadow-soft: 0 10px 30px rgba(15,23,42,.06);
      }

      html,
      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      body {
        color: var(--ink);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      }

      .page {
        min-height: 100vh;
        background: var(--bg1);
      }

      .container {
        max-width: 980px;
        margin: 0 auto;
        padding: 28px 20px 36px;
      }

      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 18px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .brand-logo {
        display: block;
        width: 34px;
        height: 34px;
        border-radius: 10px;
        object-fit: cover;
      }

      .brand-name {
        font-weight: 700;
        letter-spacing: -0.01em;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .nav-link {
        text-decoration: none;
        color: var(--ink);
        padding: 8px 10px;
        border-radius: 10px;
      }

      .menu-btn {
        display: none;
        width: 42px;
        height: 42px;
        border-radius: 12px;
        border: 1px solid var(--stroke);
        background: rgba(255,255,255,.8);
        backdrop-filter: blur(10px);
        cursor: pointer;
        font: inherit;
      }

      .mobile-menu {
        display: none;
        margin-top: 10px;
        border: 1px solid var(--stroke);
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: var(--shadow-soft);
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transform: translateY(-6px);
        transition: max-height 240ms ease, opacity 200ms ease, transform 240ms ease;
      }

      .mobile-menu.is-open {
        max-height: 260px;
        opacity: 1;
        transform: translateY(0);
      }

      .mobile-menu a {
        display: block;
        padding: 12px 14px;
        text-decoration: none;
        color: var(--ink);
        border-top: 1px solid rgba(229,231,235,.8);
      }

      .mobile-menu a:first-child {
        border-top: 0;
      }

      @media (max-width: 640px) {
        .nav {
          display: none;
        }

        .menu-btn {
          display: inline-flex;
          align-items: center;
          justify-content: center;
        }

        .mobile-menu {
          display: block;
        }
      }

      .card {
        border: 1px solid var(--stroke);
        background: var(--surface);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        box-shadow: var(--shadow-soft);
        padding: 16px;
      }

      .card--hero {
        padding: 22px;
        box-shadow: var(--shadow);
      }

      .hero-title {
        margin: 0 0 10px;
        font-size: 28px;
        line-height: 1.15;
        letter-spacing: -0.03em;
      }

      .hero-subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 16px;
        line-height: 1.55;
        max-width: 64ch;
      }

      .panel {
        margin-top: 12px;
      }

      .panel-title {
        margin: 0 0 12px;
        font-size: 18px;
      }

      .form {
        display: grid;
        gap: 8px;
      }

      .form--520 {
        max-width: 520px;
      }

      .input {
        width: 100%;
        max-width: 100%;
        padding: 10px;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        font: inherit;
      }

      .btn {
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid var(--ink);
        background: var(--ink);
        color: #ffffff;
        font-weight: 600;
        cursor: pointer;
      }

      .btn.btn--narrow {
        max-width: 220px;
      }

      .output {
        color: var(--ink);
        line-height: 1.55;
      }

      .output-stack {
        margin-top: 6px;
        display: grid;
        gap: 6px;
      }
    </style>
  </head>
  <body>
    <main class="page">
      <div class="container">
        <header class="header">
          <div class="brand">
            <img src="/logo.png" alt="Dr.Welnes" width="34" height="34" class="brand-logo" />
            <div class="brand-name">Dr.Welnes</div>
          </div>
          <nav class="nav">
            <a href="/" class="nav-link">Главная</a>
            <a href="/recipes" class="nav-link">Рецепты</a>
            <a href="/exercises" class="nav-link">Упражнения</a>
            <a href="/theory" class="nav-link">Теория</a>
            <a href="/calculators" class="nav-link">Калькуляторы</a>
          </nav>
          <button id="menu_btn" type="button" class="menu-btn" aria-label="Меню" aria-expanded="false">☰</button>
        </header>

        <div id="mobile_menu" class="mobile-menu" aria-label="Меню">
          <a href="/">Главная</a>
          <a href="/recipes">Рецепты</a>
          <a href="/exercises">Упражнения</a>
          <a href="/theory">Теория</a>
          <a href="/calculators">Калькуляторы</a>
        </div>

        <section class="card card--hero">
          <h1 class="hero-title">Основной обмен энергии</h1>
          <p class="hero-subtitle">Калькулятор базального обмена (формула Миффлина-Сан Жеора) + расчёт калоража с учётом активности.</p>
        </section>

        <section class="card panel">
          <h2 class="panel-title">Калькулятор</h2>
          <div class="form form--520">
            <label>Пол<br />
              <select id="tdee_sex" class="input">
                <option value="male">Муж</option>
                <option value="female">Жен</option>
              </select>
            </label>
            <label>Возраст (лет)<br /><input id="tdee_age" type="number" class="input" /></label>
            <label>Рост (см)<br /><input id="tdee_h" type="number" class="input" /></label>
            <label>Вес (кг)<br /><input id="tdee_w" type="number" class="input" /></label>
            <label>Активность<br />
              <select id="tdee_act" class="input">
                <option value="1.2">Минимальная — сидячая работа, почти нет тренировок</option>
                <option value="1.375">Лёгкая — 1-3 тренировки/нед, много ходьбы</option>
                <option value="1.55">Средняя — 3-5 тренировок/нед, регулярная активность</option>
                <option value="1.725">Высокая — 6-7 тренировок/нед, спорт почти каждый день</option>
                <option value="1.9">Очень высокая — тяжёлая физическая работа + тренировки</option>
              </select>
            </label>
            <button id="tdee_btn" type="button" class="btn btn--narrow">Посчитать</button>
            <div id="tdee_out" class="output"></div>
          </div>
        </section>

        <script>
          (function () {
            try {
              var btn = document.getElementById('menu_btn');
              var menu = document.getElementById('mobile_menu');
              if (btn && menu) {
                function closeMenu() {
                  menu.classList.remove('is-open');
                  btn.setAttribute('aria-expanded', 'false');
                }

                btn.addEventListener('click', function (e) {
                  try { e && e.stopPropagation && e.stopPropagation(); } catch (e) {}
                  if (menu.classList.contains('is-open')) closeMenu();
                  else {
                    menu.classList.add('is-open');
                    btn.setAttribute('aria-expanded', 'true');
                  }
                });

                document.addEventListener('click', function (e) {
                  try {
                    var t = e && e.target;
                    if (t === btn || (btn.contains && btn.contains(t))) return;
                    if (t === menu || (menu.contains && menu.contains(t))) return;
                    closeMenu();
                  } catch (e) {}
                });

                window.addEventListener('hashchange', function () {
                  closeMenu();
                });
              }
            } catch (e) {}

            function n(v) {
              var x = Number(v);
              return Number.isFinite(x) ? x : NaN;
            }

            var tdeeBtn = document.getElementById('tdee_btn');
            tdeeBtn && tdeeBtn.addEventListener('click', function () {
              var sex = document.getElementById('tdee_sex').value;
              var age = n(document.getElementById('tdee_age').value);
              var h = n(document.getElementById('tdee_h').value);
              var w = n(document.getElementById('tdee_w').value);
              var act = n(document.getElementById('tdee_act').value);
              var out = document.getElementById('tdee_out');
              if (!out) return;
              if (!age || !h || !w || !act) { out.textContent = 'Заполни все поля.'; return; }

              var bmr = (sex === 'male')
                ? (10 * w + 6.25 * h - 5 * age + 5)
                : (10 * w + 6.25 * h - 5 * age - 161);

              var cals = bmr * act;
              var base = Math.round(cals);

              out.innerHTML =
                '<div class="output-stack">' +
                '<div><b>Должный калораж:</b> ' + base + ' ккал/день</div>' +
                '<div><b>Снижение веса:</b> ' + Math.max(0, base - 300) + ' ккал/день</div>' +
                '<div><b>Набор массы:</b> ' + (base + 300) + ' ккал/день</div>' +
                '</div>';
            });
          })();
        </script>
      </div>
    </main>
  </body>
</html>
