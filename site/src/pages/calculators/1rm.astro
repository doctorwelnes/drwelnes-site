---
import Header from "../../components/Header.astro";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/global.css" />
    <title>Разовое повторение (1RM)</title>
    <style>
      :root {
        --bg1: radial-gradient(1200px 600px at 20% -10%, #dbeafe 0%, rgba(219,234,254,0) 55%),
          radial-gradient(900px 520px at 90% 0%, #fce7f3 0%, rgba(252,231,243,0) 55%),
          #ffffff;
        --ink: #111827;
        --muted: #4b5563;
        --stroke: rgba(229,231,235,.9);
        --surface: rgba(255,255,255,.8);
        --surface-strong: rgba(255,255,255,.85);
        --shadow: 0 10px 30px rgba(15,23,42,.08);
        --shadow-soft: 0 10px 30px rgba(15,23,42,.06);
      }

      html,
      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      body {
        color: var(--ink);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      }

      .page {
        min-height: 100vh;
        background: var(--bg1);
      }

      .container {
        max-width: 980px;
        margin: 0 auto;
        padding: 28px 20px 36px;
      }

      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 18px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .brand-logo {
        display: block;
        width: 34px;
        height: 34px;
        border-radius: 10px;
        object-fit: cover;
      }

      .brand-name {
        font-weight: 700;
        letter-spacing: -0.01em;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .nav-link {
        text-decoration: none;
        color: var(--ink);
        padding: 8px 10px;
        border-radius: 10px;
      }

      .card {
        border: 1px solid var(--stroke);
        background: var(--surface);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        box-shadow: var(--shadow-soft);
        padding: 16px;
      }

      .card--hero {
        padding: 22px;
        box-shadow: var(--shadow);
      }

      .hero-title {
        margin: 0 0 10px;
        font-size: 28px;
        line-height: 1.15;
        letter-spacing: -0.03em;
      }

      .hero-subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 16px;
        line-height: 1.55;
        max-width: 64ch;
      }

      .panel {
        margin-top: 12px;
      }

      .panel-title {
        margin: 0 0 12px;
        font-size: 18px;
      }

      .form {
        display: grid;
        gap: 8px;
      }

      .form--420 {
        max-width: 420px;
      }

      .input {
        width: 100%;
        max-width: 100%;
        padding: 10px;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        font: inherit;
      }

      .btn {
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid var(--ink);
        background: var(--ink);
        color: #ffffff;
        font-weight: 600;
        cursor: pointer;
      }

      .btn.btn--narrow {
        max-width: 220px;
      }

      .output {
        color: var(--ink);
        line-height: 1.55;
      }
    </style>
  </head>
  <body>
    <main class="page">
      <div class="container">
        <Header />

        <section class="card card--hero">
          <h1 class="hero-title">Разовое повторение (1RM)</h1>
          <p class="hero-subtitle">Ваш силовой максимум в одном числе.</p>
        </section>

        <section class="card panel">
          <h2 class="panel-title">Калькулятор</h2>
          <div class="form form--420">
            <label>Масса тела (кг)<br /><input id="rm_bw" type="number" inputmode="decimal" class="input" /></label>
            <label>Вес снаряда (кг)<br /><input id="rm_w" type="number" inputmode="decimal" class="input" /></label>
            <label>Повторы (1-12)<br /><input id="rm_r" type="number" class="input" /></label>
            <button id="rm_btn" type="button" class="btn btn--narrow">Посчитать</button>
            <div id="rm_out" class="output"></div>
          </div>
        </section>

        <script>
          (function () {
            function n(v) {
              var x = Number(v);
              return Number.isFinite(x) ? x : NaN;
            }

            var rmBtn = document.getElementById('rm_btn');
            rmBtn && rmBtn.addEventListener('click', function () {
              var bw = n(document.getElementById('rm_bw').value);
              var w = n(document.getElementById('rm_w').value);
              var r = n(document.getElementById('rm_r').value);
              var out = document.getElementById('rm_out');
              if (!out) return;
              if (!bw || !w || !r) { out.textContent = 'Заполни массу тела, вес и повторы.'; return; }
              if (r < 1 || r > 12) { out.textContent = 'Повторы должны быть 1-12.'; return; }

              var oneRm = w * (1 + r / 30);
              out.innerHTML = '<b>Ваше разовое повторение:</b> ' + oneRm.toFixed(1) + ' кг';
            });
          })();
        </script>
      </div>
    </main>
  </body>
</html>
