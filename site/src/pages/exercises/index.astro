---
import { getCollection } from "astro:content";
import SiteLayout from "../../layouts/SiteLayout.astro";

const items = await getCollection("exercises");
const sorted = items
  .slice()
  .sort((a, b) => {
    const ad = a.data.publishedAt ? new Date(a.data.publishedAt).getTime() : 0;
    const bd = b.data.publishedAt ? new Date(b.data.publishedAt).getTime() : 0;
    return bd - ad;
  });
---

<SiteLayout title="Упражнения" active="exercises">
  <section class="card card--hero" data-animate style="--delay: 0.05s;">
    <h1 class="hero-title">Упражнения</h1>
    <p class="hero-subtitle">Список упражнений с техникой выполнения и видео. Открывай карточку для подробностей.</p>
    <div class="chip-row" style="margin-top: 12px;">
      <span class="chip">Всего <span class="chip-count">{sorted.length}</span></span>
      <span class="chip">Видео на странице</span>
      <span class="chip">Пошаговые советы</span>
    </div>
  </section>

  <section class="card card--soft" data-animate style="--delay: 0.1s;">
    <h2 class="section-title">Все упражнения</h2>
    <div class="card-grid">
      {sorted.map((entry) => (
        <a class="card card-link" href={`/exercises/${entry.slug}`}>
          <div class="card-title">{entry.data.title}</div>
          {entry.data.description && <div class="card-text">{entry.data.description}</div>}
        </a>
      ))}
    </div>
  </section>
</SiteLayout>
