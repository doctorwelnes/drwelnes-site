generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id           String     @id @default(cuid())
  name         String?
  email        String?    @unique
  passwordHash String?
  role         Role       @default(CLIENT)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  accounts Account[]
  sessions Session[]

  invitesUsed Invite[] @relation("InviteUsedBy")

  clientProfile     ClientProfile?
  workoutSessions   WorkoutSession[]
  workoutTemplates  WorkoutTemplate[]
  measurementEntries MeasurementEntry[]
  nutritionEntries  NutritionEntry[]
  progressPhotos    ProgressPhoto[]
  coachNotes        CoachNote[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ClientProfile {
  userId    String   @id
  heightCm  Int?
  birthDate DateTime?
  sex       String?
  goalText  String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invite {
  id           String   @id @default(cuid())
  code         String   @unique
  role         Role     @default(CLIENT)
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  usedAt       DateTime?
  usedByUserId String?

  usedByUser User? @relation("InviteUsedBy", fields: [usedByUserId], references: [id], onDelete: SetNull)
}

model WorkoutSession {
  id        String   @id @default(cuid())
  userId    String
  title     String
  startedAt DateTime @default(now())
  endedAt   DateTime?
  rpe       Int?
  note      String?
  createdAt DateTime @default(now())

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises ExerciseLog[]

  @@index([userId, startedAt])
}

model WorkoutTemplate {
  id        String   @id @default(cuid())
  userId    String
  title     String
  note      String?
  createdAt DateTime @default(now())

  user      User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises WorkoutTemplateExercise[]

  @@index([userId, createdAt])
}

model WorkoutTemplateExercise {
  id               String @id @default(cuid())
  workoutTemplateId String
  exerciseName     String
  position         Int?

  workoutTemplate WorkoutTemplate @relation(fields: [workoutTemplateId], references: [id], onDelete: Cascade)

  @@index([workoutTemplateId])
}

model ExerciseLog {
  id               String @id @default(cuid())
  workoutSessionId String
  exerciseName     String
  note             String?
  position         Int?

  workoutSession WorkoutSession @relation(fields: [workoutSessionId], references: [id], onDelete: Cascade)
  sets           SetLog[]

  @@index([workoutSessionId])
}

model SetLog {
  id            String @id @default(cuid())
  exerciseLogId String
  position      Int?
  reps          Int?
  weightKg      Decimal? @db.Decimal(6, 2)
  timeSec       Int?
  distanceM     Int?

  exerciseLog ExerciseLog @relation(fields: [exerciseLogId], references: [id], onDelete: Cascade)

  @@index([exerciseLogId])
}

model MeasurementEntry {
  id       String   @id @default(cuid())
  userId   String
  date     DateTime
  weightKg Decimal? @db.Decimal(6, 2)
  waistCm  Decimal? @db.Decimal(6, 2)
  hipsCm   Decimal? @db.Decimal(6, 2)
  chestCm  Decimal? @db.Decimal(6, 2)
  bicepsCm Decimal? @db.Decimal(6, 2)
  note     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model NutritionEntry {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  calories  Int?
  proteinG  Decimal? @db.Decimal(6, 2)
  fatG      Decimal? @db.Decimal(6, 2)
  carbsG    Decimal? @db.Decimal(6, 2)
  note      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model ProgressPhoto {
  id          String   @id @default(cuid())
  userId      String
  takenAt     DateTime @default(now())
  url         String
  publicId    String?
  tag         String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, takenAt])
}

model CoachNote {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  text      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}
